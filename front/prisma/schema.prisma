// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String
  imageUrl String? @db.LongText
  comments Comment[]
  posts Post[] @relation("OwnPosts")
  tempPosts TempPost[]
  autoSaves AutoSave[]
  subscribedPosts Post[] @relation("OwnSubscribedPosts")
  likedPosts Post[] @relation("LikedPosts")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
}

model Post {
  id Int @id @default(autoincrement())
  title String
  content String @db.LongText
  htmlContent String @db.LongText
  tags Tag[] @relation("PostsAndTags")
  isPublic Boolean
  allowComments Boolean
  comments Comment[]
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  author User? @relation("OwnPosts", fields: [authorId], references: [id])
  authorId Int?
  subscribers User[] @relation("OwnSubscribedPosts")
  likers User[] @relation("LikedPosts")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([authorId])
}

model TempPost {
  id Int @id @default(autoincrement())
  title String
  content String @db.LongText
  htmlContent String @db.LongText
  tags Tag[] @relation("TempPostsAndTags")
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  createdAt DateTime @default(now())

  @@index([categoryId])
  @@index([authorId])
}

model Tag {
  id Int @id @default(autoincrement())
  name String @unique
  posts Post[] @relation("PostsAndTags")
  tempPosts TempPost[] @relation("TempPostsAndTags")
  autoSaves AutoSave[]
}

model Category {
  id Int @id
  name String @unique
  priority Int
  posts Post[]
  tempPosts TempPost[]
  autoSaves AutoSave[]
}

model Comment {
  id Int @id @default(autoincrement())
  post Post @relation(fields: [postId], references: [id])
  postId Int
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  content String @db.LongText
  datetime DateTime @default(now())

  @@index([postId])
  @@index([authorId])
}

model Visitor {
  id Int @id @default(autoincrement())
  csrfToken String @default("")
}

model VisitorsCount {
  id Int @id @default(autoincrement())
  todayCount Int 
  totalCount Int
  expireDate String
}

model AutoSave {
  id Int @id @default(autoincrement())
  title String
  content String @db.LongText
  htmlContent String @db.LongText
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  tags Tag[]
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  createdAt DateTime @default(now())

  @@index([categoryId])
  @@index([authorId])
}